<html>
  <body>
    <%= form_for :entry do |f| -%>
      <%= f.label :user_name, 'お名前' %>
      <%= f.text_field :user_name %><br>
      <%= f.text_area :content %><br>
      <%= f.submit '投稿' %>
    <% end -%>
    <hr>

    <% for entry in @entries do -%>
      <%= entry.user_name %><br>
      <%= entry.content %>
      <hr>
    <% end -%>
  </body>
</html>
